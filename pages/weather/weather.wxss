/* pages/weather/weather.wxss */
.head {
  background: linear-gradient(to bottom, #a1c8ffc2 0%,#ffffff 100%);
}
.yellow {
  background: #ecb755;
}

.green {
  background: rgb(107, 196, 107);
}

.address {
  display: block;
  margin-top: 50rpx;
  margin-bottom: 25rpx;
  font-size: 14px;
  text-align: center;
}

.address .address_text {
  font-weight: bold
}

.address .icon-arrow {
  font-size: 12px;
}
.tips {
  position: relative;
  padding:0 20px 0 40px;
  max-width: 50%;
  display: block;
  margin: 0 auto 40rpx;
  background-color:#0000002a;
  border-radius: 3px;
  height: 30px;
  line-height: 30px;
}
.tips .icon-notice {
  position: absolute;
  top: 1px;
  left: 15px;
  font-size: 20px;
  color: #fff;
}
.tips .text{
  display: inline-block;
  width: 100%;
  color: #fff;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
  font-size: 12px;
}

.today {
  margin-bottom: 20px;
}

.today .temp {
  font-weight: 100;
  font-size: 95px;
  text-align: center;
}

.today .temp .text {
  position: relative;
}

.today .temp .top {
  position: absolute;
  right: -50rpx;
  top: 0;
  font-style: normal
}

.des {
  margin-bottom: 15px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.des .text {
  font-size: 16px;
}

.des .line {
  display: block;
  text-align: center;
  width: 60rpx;
  height: 20px;
  font-size:15px;
}

.des .score .icon-leaf {
  position: absolute;
  top: 2px;
  left: 5px;
  font-size: 18px;
}
.des .score .con {
  padding:2px 8px 2px 25px;
  position: relative;
  font-size: 14px;
  color: #fff;
  border-radius: 3px;
}

.details {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 13px;
  color: #9c9c9c
}

.details .iconfont {
  margin-right: 3px;
  font-size: 18px;
  vertical-align: top;
}

.details .water {
  margin: 0 20px;
}
.details .iconfont,
.details .text {
  vertical-align: middle
}

.info {
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f3f8ffc2;
  font-size: 14px;
  margin-bottom: 20px;
}

.info .day,
.info .night {
  flex: 1;
  padding: 10px;
}

.info .day .icon,
.info .night .icon {
  margin-left: 2px;
  font-size: 12px;
  border-radius: 3px;
  padding: 0 10px;
  color: #fff;
  font-style: normal;
}

.info .day .text,
.info .night .text {
  display: flex;
  align-items: space-between;
  justify-content: space-between;
  margin-bottom: 5px;
}

.info .line {
  display: block;
  text-align: center;
  width: 1px;
  height: 40px;
  background: #d3d3d34f;
}

.tit {
  padding: 10px 5px;
  border-bottom: 1px solid #f0f0f0;
}
.tit .text {
  font-size: 14px;
}

.echart-wrap {
  width: 100%;
  height: 160px;
}