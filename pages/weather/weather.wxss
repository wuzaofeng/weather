/* pages/weather/weather.wxss */
.head {
  background: linear-gradient(to bottom, #a1c8ffc2 0%,#ffffff 100%);
}
.yellow {
  background: #ecb755;
}

.green {
  background: rgb(107, 196, 107);
}

.address {
  display: block;
  margin-top: 50rpx;
  margin-bottom: 25rpx;
  font-size: 14px;
  text-align: center;
}

.address .address_text {
  font-weight: bold
}

.address .icon-arrow {
  font-size: 12px;
}
.tips {
  position: relative;
  padding:0 20px 0 40px;
  max-width: 50%;
  display: block;
  margin: 0 auto 40rpx;
  background-color:#0000002a;
  border-radius: 3px;
  height: 30px;
  line-height: 30px;
}
.tips .icon-notice {
  position: absolute;
  top: 1px;
  left: 15px;
  font-size: 20px;
  color: #fff;
}
.tips .text{
  display: inline-block;
  width: 100%;
  color: #fff;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
  font-size: 12px;
}

.today {
  margin-bottom: 20px;
}

.today .temp {
  font-weight: 100;
  font-size: 95px;
  text-align: center;
}

.today .temp .text {
  position: relative;
}

.today .temp .top {
  position: absolute;
  right: -50rpx;
  top: 0;
  font-style: normal
}

.des {
  margin-bottom: 15px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.des .text {
  font-size: 16px;
}

.des .line {
  display: block;
  text-align: center;
  width: 60rpx;
  height: 20px;
  font-size:15px;
}

.des .score .icon-leaf {
  position: absolute;
  top: 2px;
  left: 5px;
  font-size: 18px;
}
.des .score .con {
  padding:2px 8px 2px 25px;
  position: relative;
  font-size: 14px;
  color: #fff;
  border-radius: 3px;
}

.details {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 13px;
  color: #9c9c9c
}

.details .iconfont {
  margin-right: 3px;
  font-size: 18px;
  vertical-align: top;
}

.details .water {
  margin: 0 20px;
}
.details .iconfont,
.details .text {
  vertical-align: middle
}

.info {
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f3f8ffc2;
  font-size: 14px;
  margin-bottom: 20px;
}

.info .day,
.info .night {
  flex: 1;
  padding: 10px;
}

.info .day .icon,
.info .night .icon {
  margin-left: 2px;
  font-size: 12px;
  border-radius: 3px;
  padding: 0 10px;
  color: #fff;
  font-style: normal;
}

.info .day .text,
.info .night .text {
  display: flex;
  align-items: space-between;
  justify-content: space-between;
  margin-bottom: 5px;
}

.info .line {
  display: block;
  text-align: center;
  width: 1px;
  height: 40px;
  background: #d3d3d34f;
}

.tit {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10px 5px;
  border-bottom: 1px solid #f0f0f0;
}
.tit .name {
  flex: 1;
  font-size: 14px;
  font-weight: bold;
}
.tit .sun {
  color: #c0c0c0
}
.tit .sun .icon{
  font-size: 14px;
}
.tit .sun .icon-sunset {
  margin-left: 10px;
}
.tit .sun .text {
  font-size: 12px;
}

.echart-wrap {
  width: 100%;
  margin-bottom: 40rpx;
}

.echart-wrap .echart {
  width: 800px;
  height: 160px
}

.days-wrap {
  width: 100%;
  margin-bottom: 40rpx;
}

.days {
  position: relative;
  display: flex;
}

.days .days-item {
  float: left;
  width: 20%;
  text-align: center;
  padding: 15px 0;
  font-size: 14px;
}

.days .today-bg {
  background: #fdfdfd;
}

.days .week {
  margin-bottom: 5px;
}

.days .we-today {
  color: #fff;
  display: inline-block;
  width: 20px;
  height: 20px;
  line-height:20px;
  border-radius: 50%;
  background-color: rgb(106, 177, 224);
}

.days .date {
  margin-bottom: 5px;
  color: #0000002a;
  font-size: 12px;
}

.days .wea {
  white-space: nowrap;
  margin-bottom: 5px;
}

.days .win,
.days .speed {
  white-space: nowrap;
  font-size: 12px;
  color: #0000002a;
}
.days .speed {
  margin-bottom: 5px;
}

.days .score {
  white-space: nowrap;
  font-size: 12px;
  color: #333;
}
.days .score .circle {
  vertical-align: middle;
  display: inline-block;
  width: 5px;
  height: 5px;
  border-radius: 50%;
  margin-right: 3px;
}

.today-bg .date,
.today-bg .win,
.today-bg .speed  {
  color: #333;
}

.temp-echart-bg {
  width: 100%;
  height: 150px;
}

.days .temp-echart{
  position: absolute;
  width: 100%;
  height: 150px;
  top: 105px;
  left: 0;
  right: 0;
}

.index-wrap .index{
  float: left;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-right: 1px solid #f0f0f09f;
  border-bottom: 1px solid #f0f0f09f;
}
.index-wrap .index:nth-child(4n) {
  border-right: 0;
}

.index-wrap .index .name {
  display: block;
  font-size: 13px;
  width: 100%;
  text-align: center;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space:nowrap;
}

.index-wrap .index .value {
  display: block;
  font-size: 12px;
  color: #0000002a;
}